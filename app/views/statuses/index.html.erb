<div class="page-header bottom-space">
	<h1> What did we all do today? </h1>
</div>

<%= link_to "Post a New Status", update_path, class: "btn btn-success bottom-space"%>

<% @ordered_statuses.each do |status| %>

	<div class="status">
		<div class="row">
			<div class="span1">
				<%= link_to image_tag(status.user.gravatar_url), profiles_path(status.user)%>
			</div>
			<div class="span7">
				<strong> <%= status.user.user_name %></strong>
				<p><%= status.content %></p>
				<div class="meta">
					<%= "about "+time_ago_in_words(status.created_at)+" ago" %> 
					<% if status.user == current_user %> 
						<span class="admin">
							<%= link_to "Edit", edit_status_path(status) %> |
							<%= link_to "Delete", status, method: :delete, data: {confirm: "Are you sure you want to delete this status"} %>
						</span>
					<% end %>
				</div>
			</div>
		</div>
	</div>
<% end %>